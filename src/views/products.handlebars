<h1 class="text-center">Lista de Productos</h1>
<div class="d-flex flex-column justify-content-center align-items-center">

  {{#each products}}
    <div class="card" style="width: 18rem;">
      <img src="#" class="card-img-top" alt="" />
      <div class="card-body">
        <h5 class="card-title text-center">{{this.title}}</h5>
        <p class="card-text text-center">{{this.description}}</p>
        <div>
          <a href="#" class="btn btn-primary d-flex justify-content-center">Add
            to cart</a>
        </div>
      </div>
    </div>
  {{/each}}
  <div class="flex">

    {{#if hasPrevPage}}
      <a href="/api/products?page={{prevPage}}">Anterior</a>
    {{/if}}
    {{#if hasNextPage}}
      <a href="/api/products?page={{nextPage}}">Siguiente</a>
    {{/if}}
    <p>Pagina {{currentPage}} de {{totalPages}}</p>
  </div>
</div>